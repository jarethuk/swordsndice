{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off"
			},
			"a11y": {
				"useKeyWithClickEvents": "off",
				"useKeyWithMouseEvents": "off"
			},
			"complexity": {
				"noStaticOnlyClass": "off"
			},
			"correctness": {
				"useExhaustiveDependencies": "off"
			}
		},
		"includes": ["**", "!**/*.spec.ts", "!**/*.chain-spec.ts"]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
